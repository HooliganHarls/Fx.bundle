<?xml version="1.0" encoding="UTF-8"?>
<site site="http://admin.brightcove.com/"
	    plugin="http://admin.brightcove.com/viewer/us1.24.00.06a/BrightcoveBootloader.swf"
			initialState="playing"
			version="1.0">

	<crop x="100" y="0" width="700" height="500"/>
    <click x="450" y="350" />


	<seekbar type="simple">
		<start x="65" y="705" />
		<end   x="574" y="705" />
		<played>
				<color rgb="a3b840" />
		</played>
	</seekbar>
	

	<!-- PLAYING -->
	<state name="playing">
		
		<!-- Click to pause -->
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
                <click x="20" y="705" />
				<click x="20" y="705" />
				<goto state="paused" />
			</action>
		</event>

		<!-- Video ends -->
		<event>
			<condition>
				<and>
					<color x="0" y="377" rgb="009999" />
				</and>
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
		
	</state>
	
	<!-- PAUSED -->
	<state name="paused">		
		<!-- Wait for play command -->
		<event>
			<condition>
			 	<command name="play" />
			</condition>
			<action>
				<click x="20" y="705" />
			 	<click x="20" y="705" />
                <goto state="playing" />
			</action>
		</event>
	</state>	
	
</site>